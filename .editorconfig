root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.c]
max_line_length = 100
brace_style = allman

[*.cpp]
max_line_length = 100
brace_style = allman

[*.h]
max_line_length = 100
brace_style = allman

[*.hpp]
max_line_length = 100
brace_style = allman
